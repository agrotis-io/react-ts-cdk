{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "sourceMap": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "noEmitOnError": true,
    "noUnusedParameters": true,
    "watch": true,
    "jsx": "react",
    "allowSyntheticDefaultImports" : false
  },
  "exclude": [
    "node_modules"
  ]
}